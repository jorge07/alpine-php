FROM alpine:3.4

RUN echo "http://dl-4.alpinelinux.org/alpine/edge/testing" >> /etc/apk/repositories

RUN apk add --no-cache \
        openssh \
        supervisor \
        git \
        zip \
        wget \
        curl \
        php7 \
        php7-apcu \
        php7-bcmath \
        php7-ctype \
        php7-curl \
        php7-exif \
        php7-iconv \
        php7-intl \
        php7-json \
        php7-libsodium \
        php7-mbstring \
        php7-opcache \
        php7-openssl \
        php7-pcntl \
        php7-pdo_mysql \
        php7-pdo_pgsql \
        php7-pdo_sqlite \
        php7-phar \
        php7-posix \
        php7-session \
        php7-xdebug \
        php7-xml \
        php7-xsl \
        php7-zip \
        php7-zlib \
    && ln -s /usr/bin/php7 /usr/bin/php \

    && sed -i s/#PermitRootLogin.*/PermitRootLogin\ yes/ /etc/ssh/sshd_config \
    && echo "root:root" | chpasswd \
    && ssh-keygen -A \

    && rm -rf /var/cache/apk/* \

    && curl -sS https://getcomposer.org/installer | php7 -- --install-dir=/usr/local/bin --filename=composer \

    && wget https://phar.phpunit.de/phpunit.phar \
    && chmod +x phpunit.phar \
    && mv phpunit.phar /usr/bin/phpunit

COPY config/supervisor/supervisor.conf /etc/supervisor/conf.d/supervisord.conf
COPY config/php/php.ini /etc/php7/conf.d/50-setting.ini
COPY config/php/php-fpm.conf /etc/php7/php-fpm.conf

ENTRYPOINT ["supervisord", "--nodaemon", "--configuration", "/etc/supervisor/conf.d/supervisord.conf"]

EXPOSE 22 9000

WORKDIR /app
